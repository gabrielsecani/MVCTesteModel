@model WebAppMVC.Models.Funcionario

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
@using (@Html.BeginForm())
{
    <table>
        <tr>
            <td>@Html.LabelFor(m => m.codigo)</td>
            <td>@Html.TextBoxFor(m => m.codigo)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.nome)</td>
            <td>@Html.TextBoxFor(m => m.nome)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.genero)</td>
            <td>
                @Html.RadioButtonFor(m => m.genero, "M", new { @checked = true, @class = "uhu" }) Masculino
                | @Html.RadioButtonFor(m => m.genero, "F") Feminino
            </td>
        </tr>
        <tr><td colspan="2" style="text-align:right"><input type="submit" value="Cadastrar" /></td></tr>
    </table>
    @Html.ActionLink("Voltar ao inicio", "Index");
}
